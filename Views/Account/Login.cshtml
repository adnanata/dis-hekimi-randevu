@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Giriş Yap";
}
<div class="row" style="margin-top:10px;">
    <div class="col-md-offset-4 col-md-4">
        <section class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">Giriş Yap</h4>
            </div>
            <div class="panel-body">
                <div class="alert alert-info">
                    <p>
                        Demo bilgileri: <br>
                        <ul>
                            <li><strong>Kullanıcı Adı</strong> admin@demo.com</li>
                            <li><strong>Şifre</strong> Adnanata123+</li>
                        </ul>
                    </p>
                </div>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-default">Oturum aç</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-action="ForgotPassword">Şifremi unuttum?</a>
                        </p>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
